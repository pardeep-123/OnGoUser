<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_row"
    android:id="@+id/rl_list"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/orderno"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="@dimen/_11sdp"
                android:text="Order number 546KLBN\nffgfgfg">

            </TextView>
            <TextView
                android:id="@+id/tvstatus"
                style="@style/CommonTextWrapcontent"
                android:text="Completed"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="30"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="end"
                android:textSize="@dimen/_11sdp"
                android:layout_centerInParent="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/vendorimage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/image_9"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:textColor="@color/black"
                        android:text="DSLR"
                        android:id="@+id/tvName"
                        android:layout_weight="70"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerInParent="true"/>
                    <TextView
                        style="@style/CommonTextWrapcontent"
                        android:text=""
                        android:layout_weight="30"
                        android:gravity="end"
                        android:textSize="@dimen/_13sdp"
                        android:layout_centerInParent="true"/>

                </LinearLayout>
                <TextView
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="$60"
                    android:id="@+id/orderamount"
                    android:textSize="@dimen/_10sdp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/tvdate"
                    style="@style/CommonTextWrapcontent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Date: 16th April 2020"
                    android:textSize="@dimen/_10sdp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_reorder"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"                android:layout_marginTop="@dimen/_10sdp"
                    android:text="Reorder"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/scan_button"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>