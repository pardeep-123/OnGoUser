<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:riv_corner_radius="@dimen/_10sdp"
        android:scaleType="fitXY"
        android:src="@mipmap/no_image_placeholder"/>
    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:text="dhjaghsd "
        android:paddingStart="@dimen/_5sdp"
        android:layout_below="@+id/iv_shop_img"
        android:layout_marginTop="@dimen/_2sdp"/>
    <TextView
        android:id="@+id/tv_shopCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="jkls add"
        android:fontFamily="@font/regular"
        android:paddingStart="@dimen/_5sdp"
        android:layout_below="@+id/tv_shopname"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:id="@+id/tv_shopDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="(4 km)"
        android:fontFamily="@font/regular"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_toEndOf="@id/tv_shopCategory"
        android:layout_alignTop="@id/tv_shopCategory"/>

</RelativeLayout>