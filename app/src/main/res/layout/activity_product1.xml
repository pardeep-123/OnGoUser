<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.product.ProductDetailActivity">
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/image3"/>
    <ImageView
        android:id="@+id/ivBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="fitXY"
        android:src="@drawable/small_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/back"/>

        <TextView
            style="@style/CommonTextWrapcontent"
            android:textColor="@color/white"
            android:text="Products"
            android:textSize="@dimen/_14sdp"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/cart" />

            <RelativeLayout
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"></TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ivProfile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_below="@id/ivBar"
                android:layout_weight="60"
                android:layout_marginLeft="@dimen/_10sdp"
                style="@style/CommonTextWrapcontent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Netscafe Blend 43 Decaf\n250gm"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="40"
                android:gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/like">

                </ImageView>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/doc">

                </ImageView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food is any substance the organism's cells to provide energy, maintain life, or stimulate growth. Different species of animals have different feeding behaviours that satisfy the needs of their unique metabolisms, often evolved to fill a specific ecological niche within specific geographical contexts."
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

        </TextView>

        <TextView
            android:layout_below="@id/ivBar"
            android:layout_weight="60"
            android:layout_marginLeft="@dimen/_10sdp"
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Price"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:text="$30/kg">

        </TextView>

        <TextView
            android:layout_below="@id/ivBar"
            android:layout_weight="60"
            android:layout_marginLeft="@dimen/_10sdp"
            style="@style/CommonTextWrapcontent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Quintity"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"

        android:text="2 kg"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        android:background="@drawable/add_shape">

    </TextView>
    <TextView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
      android:layout_marginLeft="@dimen/_10sdp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        android:background="@drawable/add_shape">

    </TextView>
    <TextView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:text="-"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/add_shape">

    </TextView>
</LinearLayout>
        <Button
            android:id="@+id/btnaddcart"
            android:layout_below="@id/llDetail"
            style="@style/Button"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Add to cart"
            />
    </LinearLayout>
</RelativeLayout>